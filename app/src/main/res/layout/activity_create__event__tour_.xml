<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10sp"
        tools:context=".Create_Event_Tour_Activity">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Create Your Event"
            android:textAlignment="center"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:textSize="40dp"
            />

        <EditText
            android:id="@+id/tourNameET"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="enter_tour_name_here"
            android:padding="16dp"
            android:singleLine="true"
            android:textAlignment="center"
             />

        <EditText
            android:id="@+id/tourDescriptionET"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="tour_description"
            android:padding="16dp"
            android:singleLine="true"
            android:textAlignment="center"
             />

        <EditText
            android:id="@+id/startDateAddTourET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:focusable="false"
            android:hint="tour_start_date"
            android:inputType="text"
            android:padding="16dp"
            android:textAlignment="center"
             />

        <EditText
            android:id="@+id/endDateAddTourET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:focusable="false"
            android:hint="tour_end_date"
            android:inputType="text"
            android:padding="16dp"
            android:textAlignment="center"
             />

        <EditText
            android:id="@+id/tourBudgetET"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Budget"
            android:padding="16dp"
            android:textAlignment="center"
             />

        <Button
            android:id="@+id/saveTourInfoAddNewTourBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:padding="16dp"
            android:text="Save Your Tour"
            android:textAllCaps="false"
            android:textSize="20dp" />



    </LinearLayout>


</layout>